      <a href="https://wa.me/522462486999" target="_blank" rel="noopener" class="topbar-wa">WhatsApp</a>
    </div>
  </div>

  <!-- Header principal -->
  <header class="main-header">
    <div class="header-inner">
      <a href="/" class="logo">
        <span class="logo-icon">CenTI-R</span>
        <span class="logo-text">Centro de Terapia Psicológica</span>
      </a>
      <button class="nav-toggle" id="navToggle" aria-label="Menú"><span></span><span></span><span></span></button>
      <nav class="main-nav" id="mainNav">
        <a href="/#servicios">Servicios</a>
        <a href="/informacion/#tipos-terapia">Tipos de terapia</a>
        <a href="/informacion/">Información</a>
        <a href="/pagos/">Pagos</a>
        <a href="/login/" class="nav-cta">Mi cuenta</a>
